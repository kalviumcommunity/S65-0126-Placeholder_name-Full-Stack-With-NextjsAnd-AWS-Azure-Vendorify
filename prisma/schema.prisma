generator client {
  provider      = "prisma-client-js"
  // "native"              → your local dev machine (auto-detected)
  // "rhel-openssl-1.0.x" → Vercel Lambda / Amazon Linux 2 (Node 18)
  // "rhel-openssl-3.0.x" → Vercel Lambda / Amazon Linux 2023 (Node 20+)
  // Adding all three ensures the right binary is available regardless of
  // which Vercel runtime region/generation your functions land on.
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int                 @id @default(autoincrement())
  name         String
  email        String              @unique
  password     String
  createdAt    DateTime            @default(now())

  applications VendorApplication[]
  documents    Document[]
}

model Document {
  id        Int      @id @default(autoincrement())
  fileName  String
  fileUrl   String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

model VendorApplication {
  id            Int      @id @default(autoincrement())
  vendorName    String
  stallType     String
  licenseNumber String
  status        String   @default("Pending")
  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())

  @@index([userId])
}
